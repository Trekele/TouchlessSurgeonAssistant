<UserControl x:Class="TouchlessSurgeonAssistant.ctrl3DModelViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:helix="http://helix-toolkit.org/wpf"
             xmlns:local="clr-namespace:TouchlessSurgeonAssistant"
             mc:Ignorable="d" 
             d:DesignHeight="331.78" d:DesignWidth="318.432">

    <Grid>
        <helix:HelixViewport3D x:Name="viewPort3d" ZoomExtentsWhenLoaded="true" Margin="0,0,10,10" >
            <!-- Remember to add light to the scene -->
            <helix:DefaultLights/>
            <ModelVisual3D x:Name="p"/>
        </helix:HelixViewport3D>
    </Grid>
</UserControl>
