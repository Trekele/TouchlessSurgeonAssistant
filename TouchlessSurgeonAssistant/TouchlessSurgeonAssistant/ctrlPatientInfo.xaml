<UserControl x:Class="TouchlessSurgeonAssistant.ctrlPatientInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TouchlessSurgeonAssistant"
             mc:Ignorable="d" 
             d:DesignHeight="95.339" d:DesignWidth="528.813">
    <Grid Margin="0,0,0,10">
        <Label x:Name="lblPatientName" Content="PATIENT NAME" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.055,0.227"/>
        <Label x:Name="lblSurgeryType" Content="TYPE OF SURGERY" HorizontalAlignment="Left" Margin="10,53,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnStart" Content="START" HorizontalAlignment="Left" Margin="371,16,0,0" VerticalAlignment="Top" Width="75" Click="btnStart_Click"/>
        <Button x:Name="btnEnd" Content="END" HorizontalAlignment="Left" Margin="451,16,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="1.426,0.694" Click="btnEnd_Click"/>
        <Label x:Name="lblTimer" Content="0:00:00" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="371,53,0,0" VerticalAlignment="Top" Width="148"/>


    </Grid>
</UserControl>
